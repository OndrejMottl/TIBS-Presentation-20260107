{
  "margins": {
    "smallMargin": "5px",
    "blockMargin": "10px", 
    "largeMargin": "20px"
  },
  "headings": {
    "headingMargin": "0",
    "headingTextTransform": "none",
    "headingTextShadow": "3px 4px 5px rgba(204, 204, 204, 0.8)"
  },
  "layout": {
    "contentMaxWidth": "900px"
  },
  "code": {
    "codeBackgroundColor": "lightCodeBackground",
    "codeBorderRadius": "8px",
    "codeLineHeight": "1.4",
    "inlineCodePadding": "0.125rem 0.25rem"
  },
  "slides": {
    "slidePadding": "0 $smallMargin"
  },
  "blockquote": {
    "blockquotePadding": "16px 24px",
    "blockquoteBorderRadius": "25px",
    "blockquoteBorderWidth": "3px",
    "blockquoteMargin": "1rem 0"
  },
  "table": {
    "tableCellPadding": "0.75rem",
    "tableBorderOpacity": "0.2",
    "tableStripeOpacity": "0.5"
  },
  "shadows": {
    "lightTextShadow": "1px 1px 2px rgba(255, 255, 255, 0.8)",
    "darkTextShadow": "1px 1px 2px rgba(0, 0, 0, 0.8)",
    "blockquoteShadow": "none"
  },
  "transitions": {
    "defaultTransition": "0.2s ease"
  },
  "positioning": {
    "slideMarginTop15": "15%",
    "slideMarginTop25": "25%",
    "centerVertical": "50%"
  }
}
